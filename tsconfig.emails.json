{
  "compilerOptions": {
    "rootDir": "api/_emails",
    "outDir": "api/_emails-build",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true, // âœ… emit .d.ts
    "declarationMap": false,
    "emitDeclarationOnly": false
  },
  "include": ["api/_emails/**/*.ts", "api/_emails/**/*.tsx"],
  "exclude": ["node_modules", "api/_emails-build"]
}
